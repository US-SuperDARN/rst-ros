#!/bin/bash

# Kill USRP drivers and CUDA driver on second radar:
RADAR_2=192.168.100.2
ssh radar_user@$RADAR_2 '/home/radar_user/repos/rst-ros/script/stop.radar2'

pkill -KILL -f srr_watchdog.py

/home/radar_user/repos/SuperDARN_UHD_Server/srr.py stop

killall -INT schedule
sleep 10
killall -9 schedule
killall -9 rtserver
killall -9 fitacfwrite
killall -9 rawacfwrite
killall -9 iqwrite

killall -9 shellserver
killall -9 errlog

killall -9 radar

killall -9 noopscan

